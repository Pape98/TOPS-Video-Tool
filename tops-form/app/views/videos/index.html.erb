<%= stylesheet_link_tag '/stylesheets/videos' %>
</head>
<body>
<%=render 'header' %>

<h2 class="ui center aligned icon header">
  <i class="edit outline circular icon"></i>
  <div class="content">
    Videos Summary
    <div class="sub header">This page contains information about videos and it is constantly updated</div>
  </div>
</h2>

<div class="ui container">
  <table class="ui center aligned small celled striped table">
    <thead>
    <tr>
<!--      <th>ID</th>-->
      <th>Topic</th>
      <th>Book Section</th>
      <th>Presenter</th>
      <th>Keywords</th>
      <th>Courses</th>
      <th>Cuts</th>
      <th>Link</th>
      <th>Update</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <%@videos.each do |video|  %>
    <tr>
<!--      <td><%#=video.id%></td>-->
      <td><%=video.topic%></td>
      <td><%=video.section%></td>
      <td><%=video.presenter%></td>
      <td>
        <% video.keywords.each do |keyword| %>
          <div class="ui  small label">
            <%=keyword%>
          </div>
          <%end %>
      </td>
      <td>
        <% video.courses.each do |course| %>
          <%case course %>
          <%when "141" %>
          <div class="ui black small label">
            <%=course%>
          </div>
          <%when "142" %>
            <div class="ui yellow small label">
              <%=course%>
            </div>
          <%when "151" %>
            <div class="ui pink small label">
              <%=course%>
            </div>
          <%when "152" %>
            <div class="ui orange small label">
              <%=course%>
            </div>
          <%when "251" %>
            <div class="ui teal small label">
              <%=course%>
            </div>
          <%when "304" %>
            <div class="ui brown small label">
              <%=course%>
            </div>
          <%when "308" %>
            <div class="ui violet small label">
              <%=course%>
            </div>
        <% end end  %>
      </td>
      <td><%=video.cuts.join("  |  ")%></td>
      <td><i class="blue video icon" data-link="<%=video.link%>"></i></td>
      <td><a href="/videos/<%=video.id%>"><i class="green edit icon"></i></a></td>
      <td><a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/videos/<%=video.id%>"><i class="red delete icon"></i></a></td>
    </tr>
    <%end %>
    </tbody>
  </table>
</div>

<div class="ui center aligned basic modal">
  <div class="ui icon header">
    <i class="video icon"></i>
    Video
  </div>
  <div class="ui content" style="text-align: center">
    <p>Make sure to pause video when done.</p>
    <p><iframe width="620" height="400"></iframe></p>
  </div>
  <div class="actions">
    <div class="ui red  cancel inverted button">
      <i class="close icon"></i>
      Exit
    </div>
  </div>
</div>