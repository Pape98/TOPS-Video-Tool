<div class="ui text container" style="margin-top: 20%">

  <form action="/videos" method="POST" class="ui form" style="margin:0">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="field">
      <label>Video Link</label>
      <input type="text" name="video[link]">
    </div>
    <div class="field" id="timekeyword">
      <label>Segment Start Time/Keywords</label>
      <div class="ui action input">
        <input type="text" placeholder="Ex: 08:23" name="video[segments[]][cuts]">
        <%= select("post", "keywords", keywordNames, {include_hidden: false },{:id => 'keywords', :multiple => true, :class => 'ui fluid search dropdown',:name => "video[segments[]][keywords][]"})%>
        <div class="ui positive button" id="addField">Add</div>
      </div>
    </div>
    <button style="color: white; margin: 20px 0 20px 0" class="ui  big submit grey-bg button">Create</button>

  </form>
</div>



